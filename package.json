{
  "name": "unified-webnovel",
  "description": "unified packages for web novel.",
  "license": "MIT",
  "private": true,
  "packageManager": "pnpm@8.6.6",
  "workspaces": [
    "./packages/*"
  ],
  "devDependencies": {
    "@lerna-lite/changed": "^2.5.0",
    "@lerna-lite/cli": "^2.5.0",
    "@lerna-lite/publish": "^2.5.0",
    "@lerna-lite/run": "^2.5.0",
    "@lerna-lite/version": "^2.5.0",
    "@types/jest": "^29.5.3",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-jest": "^27.2.3",
    "jest": "^29.6.1",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6"
  },
  "scripts": {
    "build": "lerna run build",
    "lint": "eslint ./packages",
    "publish": "lerna publish from-git",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "version:check": "lerna changed",
    "version:update": "lerna version --conventional-commits --no-git-tag-version --sync-workspace-lock"
  },
  "eslintConfig": {
    "root": true,
    "plugins": [
      "jest"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier",
      "plugin:jest/recommended",
      "plugin:jest/style"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": [
        "./packages/*/tsconfig.json"
      ]
    },
    "ignorePatterns": [
      "**/dist/**"
    ],
    "rules": {
      "@typescript-eslint/consistent-type-exports": "warn",
      "@typescript-eslint/consistent-type-imports": "warn",
      "@typescript-eslint/no-import-type-side-effects": "warn"
    }
  },
  "jest": {
    "projects": [
      "./packages/*/package.json"
    ]
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "endOfLine": "lf"
  }
}
