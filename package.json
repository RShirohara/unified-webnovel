{
  "name": "unified-webnovel",
  "private": true,
  "description": "unified packages for web novel.",
  "license": "MIT",
  "type": "module",
  "packageManager": "pnpm@8.14.0",
  "workspaces": ["./packages/*"],
  "scripts": {
    "build": "pnpm run -r build",
    "check": "biome check .",
    "publish": "lerna publish from-git",
    "test": "vitest run --coverage.enabled --coverage.reportOnFailure --coverage.reporter=text --coverage.reporter=json-summary --coverage.reporter=json",
    "test:watch": "vitest watch",
    "version:check": "lerna changed",
    "version:update": "lerna version --conventional-commits --no-git-tag-version --sync-workspace-lock"
  },
  "prettier": "@unified-webnovel/prettier-config",
  "devDependencies": {
    "@biomejs/biome": "^1.5.2",
    "@eslint/js": "^8.56.0",
    "@lerna-lite/changed": "^3.2.1",
    "@lerna-lite/cli": "^3.2.1",
    "@lerna-lite/publish": "^3.2.1",
    "@lerna-lite/version": "^3.2.1",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@unified-webnovel/prettier-config": "workspace:*",
    "@vitest/coverage-v8": "^1.2.1",
    "clean-package": "^2.2.0",
    "conventional-changelog-conventionalcommits": "^7.0.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-vitest": "^0.3.20",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3",
    "vite-tsconfig-paths": "^4.3.1",
    "vitest": "^1.2.1"
  }
}
