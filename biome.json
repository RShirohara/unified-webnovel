{
	"$schema": "https://biomejs.dev/schemas/latest/schema.json",
	"files": {
		"includes": ["**", "!!**/*.peg.ts"],
		"ignoreUnknown": true
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true,
		"defaultBranch": "main"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"a11y": "on",
			"performance": "on",
			"style": "on",
			"suspicious": "on"
		}
	},
	"assist": {
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"useEditorconfig": true
	},
	"json": {
		"parser": {
			"allowComments": true
		}
	}
}
