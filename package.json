{
  "name": "unified-webnovel",
  "description": "unified packages for web novel.",
  "license": "MIT",
  "private": true,
  "packageManager": "yarn@3.5.1",
  "workspaces": [
    "./packages/*"
  ],
  "devDependencies": {
    "@lerna-lite/changed": "^2.4.1",
    "@lerna-lite/cli": "^2.4.1",
    "@lerna-lite/publish": "^2.4.1",
    "@lerna-lite/run": "^2.4.1",
    "@lerna-lite/version": "^2.4.1",
    "@types/jest": "^29.5.2",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-jest": "^27.2.1",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "typescript": "^5.1.3"
  },
  "scripts": {
    "build": "yarn run lerna run build",
    "lint": "yarn run eslint ./packages",
    "publish": "yarn run lerna publish from-git",
    "test": "NODE_OPTIONS=--experimental-vm-modules yarn run jest",
    "version:check": "yarn run lerna changed",
    "version:update": "yarn run lerna version --conventional-commits --no-git-tag-version --sync-workspace-lock"
  },
  "eslintConfig": {
    "root": true,
    "plugins": [
      "jest"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier",
      "plugin:jest/recommended",
      "plugin:jest/style"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": [
        "./packages/*/tsconfig.json"
      ]
    },
    "ignorePatterns": [
      "**/dist/**"
    ],
    "rules": {
      "@typescript-eslint/consistent-type-exports": "warn",
      "@typescript-eslint/consistent-type-imports": "warn",
      "@typescript-eslint/no-import-type-side-effects": "warn"
    }
  },
  "jest": {
    "projects": [
      "./packages/*/package.json"
    ]
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "endOfLine": "lf"
  }
}
