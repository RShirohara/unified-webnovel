{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "name": "vscode-jest-tests.v2",
      "request": "launch",
      "runtimeExecutable": "yarn",
      "args": [
        "jest",
        "--runInBand",
        "--watchAll=false",
        "--runTestsByPath",
        "${jest.testFile}",
        "--testNamePattern",
        "${jest.testNamePattern}"
      ],
      "env": {
        "NODE_OPTIONS": "--experimental-vm-modules"
      },
      "console": "internalConsole",
      "outputCapture": "std"
    }
  ]
}
